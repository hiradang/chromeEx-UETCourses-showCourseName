{
  "name": "UET Courses Helper",
  "description": "Show full name of a course in the courses webiste of UET - VNU",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://courses.uet.vnu.edu.vn/*"],
      "js": ["js/jquery-3.6.1.slim.min.js","js/index.js"],
      "css": ["css/contentStyle.css"]
    }
  ],
  "action": {
    "default_icon": {              
      "16": "images/icon16.png",     
      "32": "images/icon32.png"    
    },
    "default_title": "UET Courses Helper", 
    "default_popup": "index.html"  
  }
}
